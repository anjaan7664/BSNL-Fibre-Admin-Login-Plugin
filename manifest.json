{
    "name": "BSNL FTTH Admin Login",
    "manifest_version": 2,
    "version": "1.0",
    "description": "Automatically login to BSNL FTTH Admin",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "/images/logo.png"
    },
    "icons": {
        "128": "/images/logo.png"
       
    },
    "permissions":[
        "activeTab",
        "storage",
        "tabs",
        "bookmarks"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },

  "content_scripts": [{
    "js": ["js/main.js"],
    "matches": ["http://192.168.1.1/admin/login.asp"]
  }]
}